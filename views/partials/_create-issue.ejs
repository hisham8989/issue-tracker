<dialog class="modal" id="modal">
    <h2>Creating Issue</h2>
    <div class="form-container">
      <form action="/project/<%=project._id%>" method="post">
        <input name="name" type="text" placeholder="Title" required />
        <fieldset>
          <legend>Description</legend>
          <textarea
            name="description"
            cols="40"
            rows="15"
            placeholder="Describe your project"
            required
          ></textarea>
        </fieldset>
        <input name="author" type="text" placeholder="Author" required />
        <input type="submit" value="Create" />
      </form>
    </div>
    <button class="close-button"><p>cancel</p></button>
  </dialog>