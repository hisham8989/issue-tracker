<form action="/project/issue/<%=project._id%>" method="post">
    <div>
      <span>Select labels</span>
      <% for( let label of project.labels) { %>
      <input name="<%=label%>" type="checkbox" value="<%=label%>"/><%= label %> <% } %>
    </div>
    <select name="filterByAuthor" id="first">
      <optgroup label="Filter By Author">
        <option disabled value=""></option>
        <% for( let issue of project.issues ) { %>
        <option value="<%= issue.author %>"><%= issue.author %></option>
        <% } %>
      </optgroup>
    </select>
    <input type="text" name="filterBytitle" placeholder="Search by title" />
    <input
      type="text"
      name="filterBydescrption"
      placeholder="Search by description"
    />
    <button type="submit">Filter</button>
  </form>